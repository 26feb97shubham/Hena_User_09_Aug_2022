<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/appointmentsFragmentConstraintLayout"
    tools:context=".fragments.AppointmentsFragment">

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_6sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_current_bookings"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/little_gold_curved_01"
            android:text="@string/current_bookings"
            android:fontFamily="@font/avenir_medium"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/white"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_bookings_history"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/curved_white_filled_rect_box_01"
            android:text="@string/bookings_history"
            android:fontFamily="@font/avenir_medium"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/gold"/>
    </LinearLayout>

        <ScrollView
            android:id="@+id/nsv_bookings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:scrollbars="none"
            android:layout_marginHorizontal="@dimen/_11sdp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tabs_listing"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/current_booking_recycler_items_listing"/>
        </ScrollView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_no_bookings_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/no_bookings_found"
        android:textColor="@color/gold"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/avenir_medium"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/frag_appointments_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        style="@style/Theme.Progressbar"
        android:indeterminateTint="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>