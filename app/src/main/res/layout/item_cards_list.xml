<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    android:id="@+id/main_card"
    android:padding="@dimen/_2sdp">

    <RadioButton
        android:id="@+id/iv_selected_unselected"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:gravity="center"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_selected_unselected"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Card Title"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_11ssp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:gravity="center_vertical|start"
        app:layout_constraintTop_toTopOf="@id/iv_selected_unselected"
        app:layout_constraintBottom_toBottomOf="@id/iv_selected_unselected"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ending_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_14sdp"
        android:text="Card Title"
        android:textDirection="locale"
        android:textAlignment="viewEnd"
        android:gravity="center_vertical|end"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toTopOf="@id/tv_card_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_card_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>