<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:id="@+id/forgotPasswordActivityLayout"
    tools:context=".activities.ForgotPasswordActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_15sdp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/logo_1"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:contentDescription="@string/logo"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_frgt_pass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/gold"
                        android:gravity="center"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="normal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:text="@string/forgot_password"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_login_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_frgt_pass"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/gold"
                        android:lineHeight="@dimen/_15sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:textStyle="normal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:elevation="@dimen/_5sdp"
                        android:text="@string/enter_your_email_address_and_we_will_be_sending_you_instructions_on_how_to_reset_your_password"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtemailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_login_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textDirection="locale"
                        android:textAlignment="viewStart"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:background="@drawable/gold_border_white_filled_rect_box_curved"
                        android:textColorHint="@color/placeholder_color"
                        android:padding="@dimen/_10sdp"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/avenir_medium"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:textSize="@dimen/_12ssp"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:textAllCaps="false"
                        android:elevation="@dimen/_5sdp"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:hint="@string/email_address"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:layout_constraintTop_toBottomOf="@+id/edtemailaddress"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:background="@drawable/curved_gold_filled_rect_box"
                        android:fontFamily="@font/avenir_medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="normal"
                        android:textAllCaps="true"
                        android:elevation="@dimen/_5sdp"
                        android:text="@string/submit"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/frgt_pass_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>