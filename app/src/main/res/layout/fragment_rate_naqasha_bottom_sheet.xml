<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/rateNaqashatBottomSheetDialog"
    tools:context=".bottomsheetdialog.RateNaqashaBottomSheetFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_12sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating_experience_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/how_would_you_rate_your_experience"
            android:textColor="@color/gold"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/avenir_medium"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="@dimen/_15ssp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_rating_experience_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/user"
            android:layout_marginTop="@dimen/_15sdp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_naqasha_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/civ_profile"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Naqasha Farah / Dubai"
            android:fontFamily="@font/avenir_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/gold"/>

        <LinearLayout
            android:id="@+id/ratingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_naqasha_name"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:gravity="center">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:theme="@style/orangeRatingBar"
                style="?attr/ratingBarStyleSmall"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:fontFamily="@font/avenir_medium"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/orange"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintTop_toBottomOf="@id/ratingView"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:background="@drawable/little_curved_white_filled_gold_border_rect_box"
            android:gravity="center">
            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:theme="@style/orangeRatingBar"
                style="?attr/ratingBarStyle" />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ratingLayout"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/ratingLayout"
            android:text="@string/reviews"
            android:fontFamily="@font/avenir_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/gold"/>
        <LinearLayout
            android:id="@+id/editreviewlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_review_txt"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:background="@drawable/little_curved_white_filled_gold_border_rect_box">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_reviews"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="text"
                android:maxLines="5"
                android:maxLength="4000"
                android:fontFamily="@font/avenir_medium"
                android:textCursorDrawable="@drawable/cursor_color"
                android:paddingHorizontal="@dimen/_6sdp"
                android:textColor="@color/gold"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/curved_gold_filled_rect_box"
            android:text="@string/submit"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_medium"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/editreviewlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="true"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>