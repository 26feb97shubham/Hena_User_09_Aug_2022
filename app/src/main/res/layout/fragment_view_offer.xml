<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".fragments.ViewOfferFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvViewOfferDetails"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/gold"
        android:text="@string/offer_details"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivOfferImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvViewOfferDetails"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/default_henna"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_8sdp"
        app:riv_mutate_background="true"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rivOfferImage"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/services"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvOfferServiceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOfferServiceName"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Category Name"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvOfferCategoryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOfferCategoryName"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/offer_duration"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvOfferDurationText"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOfferDuration"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/offer_price"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvOfferDurationPriceText"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvOfferPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/services"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOfferDuration"
        app:layout_constraintTop_toBottomOf="@id/tvOfferDuration" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvOfferDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/_8sdp"
        android:maxLines="1"
        android:text="@string/services"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvOfferDurationText"
        app:layout_constraintTop_toBottomOf="@id/tvOfferCategoryName" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOfferDurationPriceText"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/hennaya_details"
        android:textColor="@color/gold"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvHennayaDetailsText"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/clSupplierDetails"
        app:layout_constraintTop_toBottomOf="@id/tvHennayaDetailsText">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:id="@+id/rivSupplierImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/default_naqashat_profile"
            app:riv_corner_radius="@dimen/_8sdp"
            android:scaleType="centerCrop"
            app:riv_mutate_background="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHennayaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_6sdp"
            android:text="@string/hennaya_details"
            android:textColor="@color/gold"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rivSupplierImage"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintStart_toEndOf="@id/rivSupplierImage"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tvHennayaName"
            android:layout_marginTop="@dimen/_6sdp"
            android:numStars="5"
            android:id="@+id/rbHennayaName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>