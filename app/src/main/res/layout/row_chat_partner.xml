<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/chat_partner_bg"
        android:fontFamily="@font/mont_light"
        android:maxWidth="190dp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/card_image_admin"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/row_chat_admin_image_border"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:gravity="center_vertical|start"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_gravity="start">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/post_image_admin"
            android:src="@drawable/golden_logo"/>
    </LinearLayout>
</LinearLayout>