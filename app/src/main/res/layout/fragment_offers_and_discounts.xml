<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".fragments.OffersAndDiscountsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_offers_n_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/offers_and_discounts"
        android:fontFamily="@font/avenir_medium"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="normal"
        android:textColor="@color/gold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_offers_n_disc"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_ten_percent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_offer_ten_percent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hennatattoos" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/offer_desc_card_ten_percent"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardBackgroundColor="#D1C3B7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_offers_n_disc_name_ten_percent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:gravity="center"
                        android:text="10% offers"
                        android:textColor="#836853"
                        android:textSize="@dimen/_14ssp"
                        app:drawableEndCompat="@drawable/dark_brown_right_arrow" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_fifteen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toBottomOf="@id/cl_ten_percent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_offer_fifteen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hennatattoos" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/offer_desc_card_fifteen"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardBackgroundColor="#D1C3B7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_offers_n_disc_name_fifteen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:gravity="center"
                        android:text="15% offers"
                        android:textColor="#836853"
                        android:textSize="@dimen/_14ssp"
                        app:drawableEndCompat="@drawable/dark_brown_right_arrow" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_thirty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toBottomOf="@id/cl_fifteen">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_offer_thirty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hennatattoos" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/offer_desc_card_thirty"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardBackgroundColor="#D1C3B7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_offers_n_disc_name_thirty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:gravity="center"
                        android:text="30% offers"
                        android:textColor="#836853"
                        android:textSize="@dimen/_14ssp"
                        app:drawableEndCompat="@drawable/dark_brown_right_arrow" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_fifty_seventy_five"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toBottomOf="@id/cl_thirty">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_offer_fifty_seventy_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hennatattoos" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/offer_desc_card_fifty_seventy_five"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardBackgroundColor="#D1C3B7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_offers_n_disc_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:gravity="center"
                        android:text="50-75% offers"
                        android:textColor="#836853"
                        android:textSize="@dimen/_14ssp"
                        app:drawableEndCompat="@drawable/dark_brown_right_arrow" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>